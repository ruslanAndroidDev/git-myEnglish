<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="nasaArticle"
            type="com.example.pk.myapplication.model.NasaArticle" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/interesting_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/interesting_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interesting_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@{nasaArticle.title}"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/interesting_article_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interesting_title_tv"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:text="@{nasaArticle.explanation}"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/copyright_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interesting_article_tv"
                android:layout_margin="5dp"
                android:gravity="left"
                android:textColor="#0b0b0b"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>
</layout>