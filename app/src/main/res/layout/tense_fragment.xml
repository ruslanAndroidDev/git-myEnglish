<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="clicker"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tense_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary"
            app:theme="@style/ToolbarStyle"
            app:titleTextColor="@color/white"></android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text="Simple"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/card_brown1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:id="@+id/card1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/pastSimple"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="#00ffffff"
                            android:gravity="left|center_vertical"
                            android:onClick="@{clicker}"
                            android:text="Past Simple" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/presentSimple"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center_vertical"
                            android:onClick="@{clicker}"
                            android:text="Present Simple" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/futureSimple"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center_vertical"
                            android:onClick="@{clicker}"
                            android:text="Future Simple" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/futureinthePastSimple"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center_vertical"
                            android:onClick="@{clicker}"
                            android:text="Future in the Past Simple" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text="Continuous"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/card_brown2"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:id="@+id/card2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/pastContinuous"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Past Continuous" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/presentContinuous"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Present Continuous" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/futureContinuous"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Future Continuous" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/futureinthePastContinuous"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Future in the Past Continuous" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text="Perfect"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/card_brown3"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:id="@+id/card3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/pastPerfect"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Past Perfect" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/presentPerfect"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Present Perfect" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/futurePerfect"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Future Perfect" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/futureinthePastPerfect"
                            style="@style/MyButtonItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Future in the Past Perfect" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text="Perfect Continuous"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/card_brown4"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:id="@+id/card4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/pastPerfectContinuous"
                            style="@style/MyButtonItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Past Perfect Continuous" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/presentPerfectContinuous"
                            style="@style/MyButtonItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Present Perfect Continuous" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/futurePerfectContinuous"
                            style="@style/MyButtonItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Future Perfect Continuous" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"></LinearLayout>

                        <TextView
                            android:id="@+id/futureinthePastPerfectContinuous"
                            style="@style/MyButtonItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{clicker}"
                            android:text="Future in the Past Perfect Continuous" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>